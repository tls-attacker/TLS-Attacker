<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xmx2048M -Xms2048M -classpath %classpath ${packageClassName} fuzzer -agent AFL</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xmx2048M -Xms2048M -classpath %classpath ${packageClassName} fuzzer -agent AFL</exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xmx2048M -Xms2048M -classpath %classpath ${packageClassName} fuzzer -agent AFL</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-format</actionName>
        <displayName>format</displayName>
        <goals>
            <goal>initialize</goal>
            <goal>java-formatter:format</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-license</actionName>
        <displayName>license</displayName>
        <goals>
            <goal>initialize</goal>
            <goal>license:format</goal>
        </goals>
    </action>
</actions>
